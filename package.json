{
  "name": "webnizer",
  "displayName": "Webnizer",
  "description": "Webnizer VS Code Extension",
  "version": "0.0.1",
  "publisher": "intc-wpe",
  "engines": {
    "vscode": "^1.67.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:webnizer.ui",
    "onCommand:webnizer.build",
    "onLanguage:cpp",
    "onView:fileExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "webnizer",
          "title": "Webnizer Extension",
          "icon": "./resources/dark/folder.svg"
        }
      ]
    },
    "views": {
      "webnizer": [
        {
          "id": "file-explorer",
          "name": "Webnizer Explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "webnizer.ui",
        "title": "Webnizer - Hello"
      },
      {
        "command": "webnizer.build",
        "title": "Webnizer - Build your project",
        "icon": {
          "light": "resources/dark/favicon.png",
          "dark": "resources/dark/favicon.png"
        }
      }
    ],
    "keybindings": [
      {
        "command": "webnizer.build",
        "key": "ctrl+f1",
        "mac": "cmd+f1",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId ==  typescript || resourceLangId ==  cpp || resourceLangId ==  c || resourceLangId == rust",
          "command": "webnizer.build",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceLangId ==  typescript || resourceLangId ==  cpp || resourceLangId ==  c || resourceLangId == rust",
          "command": "webnizer.build",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "when": "resourceLangId ==  typescript || resourceLangId ==  cpp || resourceLangId ==  c || resourceLangId == rust",
          "command": "webnizer.build",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "webnizer-output",
        "mimetypes": [
          "text/x-code-output"
        ]
      },
      {
        "id": "typescript",
        "extensions": [
          ".ts"
        ],
        "aliases": [
          "ts",
          "TypeScript"
        ],
        "configuration": "./declarative-language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "webnizer-output",
        "scopeName": "webnizer.output",
        "path": "./syntaxes/webnizer-output.tmLanguage"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mkdirp": "^1.0.2",
    "@types/mocha": "^9.1.1",
    "@types/node": "14.x",
    "@types/rimraf": "^3.0.2",
    "@types/vscode": "^1.67.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.14.0",
    "glob": "^8.0.1",
    "mocha": "^10.0.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "ag-simple-hello-world-example": "^1.0.4",
    "axios": "^0.27.2",
    "mkdirp": "^1.0.4",
    "rimraf": "^3.0.2"
  }
}
